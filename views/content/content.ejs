<section class="previewer">
    <!--标题-->
    <div class="title"><%= article.title %></div>
    <!--时间-->
    <div class="timestamp">
      <span class="date"><%= article.createdAt %></span>
      <span class="username"><%= article.author %></span>
      <span class="read-info">阅读 <%= article.stat.viewC %></span>
    </div>
    <!--正文部分-->
   <% article.content.paragraphs.forEach(function(item) { %>
      <% item.elements.forEach(function(element) { %>
        <% switch (element.tag) { 
           case "p": %>
            <% var text = element.text.replace(/\n/g, '<br/>') %>
            <p class="text"><%- text %></p>
            <% break 
             case "img": %>
             <% var src = /^\/media\/origin/.test(element.src) ? 'https://app.ilifediary.com' + element.src : element.src %>
            <img class="pic" src="<%= src %>"/>
            <% break
            case "a": %>
            <a class="text" href="<%= element.url %>"><%= element.text %></a>
            <% break %>
        <% } %>
      <% }) %>
    <%})%>
  </section>